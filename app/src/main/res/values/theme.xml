<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Collect" parent="android:Theme.Light">
	    <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
	    <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
	    <item name="android:scrollbarSize">1.75mm</item>
	    <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
	    <item name="android:fadeScrollbars">false</item>
	</style>

    <style name="customDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowTitleStyle">@style/windowTitle</item>
    </style>

    <style name="windowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ff33b5e5</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
</resources>
